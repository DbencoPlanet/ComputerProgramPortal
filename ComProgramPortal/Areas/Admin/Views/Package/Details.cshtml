@*@model IEnumerable<ComProgramPortal.Models.Entities.Package>*@

@model ComProgramPortal.Models.Entities.Package

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box panel-primary">

            <div class="box-header">
                <h3 class="box-title"><i class="fa fa-fw fa-user-plus"></i> Package Management</h3>

            </div>
            <br />
     
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-success table-bordered" style="background-color:#3c8dbc; color:#ffffff;">
                               
                                <tr>
                                    <th>Package</th>
                                    <td>@Model.PackageName</td>
                                </tr>
                                <tr>
                                    <th>Amount</th>
                                    <td>@Model.PackageAmount</td>
                                </tr>
                                <tr>
                                    <th>Duration</th>
                                    <td>@Model.Duration</td>
                                </tr>
                                <tr>
                                    <th>Start Date</th>
                                    <td>@Model.StartDate</td>

                                </tr>
                                <tr>
                                    <th>End Date</th>
                                    <td>@Model.EndDate</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>@Html.Raw(Model.PackageInfo)</td>

                                </tr>
                                
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <div class="btn-group pull-right">
                    
                </div>

            </div>

            
</div>
</div>
</div>

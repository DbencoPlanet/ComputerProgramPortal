@model IEnumerable<ComProgramPortal.Models.Entities.Payment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box panel-primary">

            <div class="box-header">
                <h3 class="box-title"><i class="fa fa-fw fa-user-plus"></i> Payment List</h3>

            </div>
            <div class="row">
                <div class="col-md-1"></div>

                <div class="col-md-5">

                </div>
                <div class="col-md-5">
                    <div class="btn-group pull-right">
                        @Html.ActionLink("New Payment", "Create", null, new { @class = "btn btn-primary" })

                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
            <br />
            <!-- /.box-header -->
            <div class="box-body table-responsive border-table">
                <br />

                <table border="1" class="table table-bordered table-hover">
                    <tr>
                        <th>
                            PACKAGE NAME
                        </th>
                        <th>
                           
                            STUDENT NAME
                        </th>
                        <th>
                            PAYMENT DATE
                        </th>
                        <th>
                          AMOUNT
                        </th>
                        <th>
                            BALANCE
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                              
                               @Html.DisplayFor(modelItem => item.Package.PackageName)
                               
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Surname)  @Html.DisplayFor(modelItem => item.User.FirstName)  @Html.DisplayFor(modelItem => item.User.OtherName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Balance)
                            </td>
                          
                            <td>
                              
                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                        Action
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu" style="border-left:1px dotted #337ab7;">
                                      
                                        <li class="text-color-success">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
                                        <li class="text-color-success">@Html.ActionLink("Details", "Details", new { id = item.Id })</li>
                                        <li class="text-color-danger">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</li>

                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>
    </div>
</div>
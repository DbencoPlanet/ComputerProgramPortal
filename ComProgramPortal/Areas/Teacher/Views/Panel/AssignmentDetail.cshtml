
@model ComProgramPortal.Models.Entities.Assignment

@{
    ViewBag.Title = "AssignmentDetail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="box box-default">
            <div class="box-header with-border">

                <h3 class="box-title">Assignment Details</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-md-5">
                        <div class="table-responsive">
                            <table class="table table-success table-bordered" style="background-color:#3c8dbc; color:#ffffff;">
                                
                                <tr>
                                    <th>Package</th>
                                    <td>@Model.Package.PackageName</td>
                                </tr>
                                <tr>
                                    <th>Title</th>
                                    <td>@Model.Title</td>
                                </tr>
                                <tr>
                                    <th>Last Submission Date</th>
                                    <td>@Model.DateSubmitionEnds</td>
                                </tr>


                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body">

                <div class="container-fluid">
                    <h3>Question</h3>
                    <div class="" style="max-height:200px;overflow:scroll;">
                        @Html.Raw(Model.Description)
                    </div>

                </div>
            </div>
            <!-- /.box-body -->


        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->


    <div class="col-md-1"></div>

</div>



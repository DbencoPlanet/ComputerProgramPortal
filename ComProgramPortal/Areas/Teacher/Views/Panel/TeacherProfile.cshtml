
@model ComProgramPortal.Models.Entities.TeacherProfile


@using System.Text.RegularExpressions;
@helper Truncate(string input, int lenght)
{
if (input.Length <= lenght)
{
        @Html.Raw(input)
}
else
{
        @Html.Raw(input.Substring(0, input.IndexOf(" ", lenght)).ToString())
}
}

@{
    ViewBag.Title = "TeacherProfile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    string ReturnUrl = HttpContext.Current.Request.Url.AbsolutePath;
}
<div class="row">
    <div class="col-md-3">
        <!-- Widget: user widget style 1 -->
        <!-- /.widget-user -->
    </div>
    <!-- /.col -->
    <div class="col-md-6">
        <!-- Widget: user widget style 1 -->
        <div class="box box-widget widget-user">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-aqua-active">
                <h3 class="widget-user-username">@ViewBag.teacher.Fullname</h3>
                <h5 class="widget-user-desc">Registration Number [ @ViewBag.teacher.StaffRegistrationId ]</h5>
            </div>
            <div class="widget-user-image">
                @*<img class="img-circle" src="~/Content/Admin/dist/img/avatar5.jpg" alt="User Avatar">*@
                @if (ViewBag.teacher.ImageId != 0)
                {
                    <img class="img-circle" src="data:image/jpg;base64,@(Convert.ToBase64String(ViewBag.teacher.Image))" alt="">
                }
                else
                {
                    @*<img class="img-circle" src="~/Content/Admin/dist/img/avatar5.jpg" alt="">*@
                    <img class="profile-user-img img-responsive img-circle" src="~/Content/Admin/dist/img/avatar5.png" alt="User profile picture">

                }
            </div>
            <div class="box-footer">

            </div>
            <div class="box-body">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs pull-right">
                        <li><a href="#tab_3-2" data-toggle="tab">Other</a></li>
                        <li><a href="#tab_2-2" data-toggle="tab">Social</a></li>
                        <li class="active"><a href="#tab_1-1" data-toggle="tab">Personal</a></li>
                        <li class="pull-left header"><i class="fa fa-user-circle-o"></i> Profile Info</li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1-1">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <tr>
                                        <th>UserName</th>
                                        <td>@ViewBag.teacher.Username</td>
                                    </tr>

                                    <tr>
                                        <th>Disability</th>
                                        <td>@ViewBag.teacher.Disability</td>
                                    </tr>
                                    <tr>
                                        <th>Emergency Contact</th>
                                        <td>@ViewBag.teacher.EmergencyContact</td>
                                    </tr>

                                </table>
                            </div>

                        </div>
                        <!-- /.tab-pane -->
                        <div class="tab-pane" id="tab_2-2">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped">
                                    <tr>
                                        <th>Favourite Book</th>
                                        <td>@ViewBag.teacher.BooksYouLike</td>
                                    </tr>
                                    <tr>
                                        <th>Favourite Food</th>
                                        <td>@ViewBag.teacher.FavouriteFood</td>
                                    </tr>
                                    <tr>
                                        <th>Favourite Movie</th>
                                        <td>@ViewBag.teacher.MoviesYouLike</td>
                                    </tr>
                                    <tr>
                                        <th>Favourite Tv Show</th>
                                        <td>@ViewBag.teacher.TVShowsYouLike</td>
                                    </tr>
                                    <tr>
                                        <th>Likes</th>
                                        <td>
                                            @ViewBag.teacher.YourLikes
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>DisLikes</th>
                                        <td>@ViewBag.teacher.YourDisLikes</td>
                                    </tr>
                                    <tr>
                                        <th>Favourite Colour</th>
                                        <td>@ViewBag.teacher.FavouriteColour</td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                        <!-- /.tab-pane -->
                        <div class="tab-pane" id="tab_3-2">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <tr>
                                        <th>Date Of Appointment</th>
                                        <td>@ViewBag.teacher.DateOfAppointment</td>
                                    </tr>

                                </table>
                            </div>
                        </div>

                    </div>
                    <!-- /.tab-content -->
                </div>
            </div>
        </div>
        <!-- /.widget-user -->

    </div>
    <!-- /.col -->
    <div class="col-md-3">
        <!-- Widget: user widget style 1 -->
        <!-- /.widget-user -->
    </div>
    <!-- /.col -->
</div>


